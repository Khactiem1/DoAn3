<script>
    document.addEventListener("DOMContentLoaded", function () {
        /* Validate */
        (function () {
            const input = document.querySelectorAll('.title__feedback');
            function remove_oninput(element) {
                var message = element.querySelector('.form-message');
                message.innerText = '';
                element.classList.remove('invalid');
            }
            function add__blur(element, messages) {
                var message = element.querySelector('.form-message');
                message.innerText = messages;
                element.classList.add('invalid');
            }
            var isFormValidCard = true;
            input.forEach((blurs, index) => {
                blurs.onblur = function () {
                    if (index == 0) {
                        function tests() {
                            return input[0].value.length >= 5 ? undefined : `Nhập số và nhập tối thiểu 5 ký tự`;
                        }
                        if (tests() == null) {
                        }
                        else {
                            var mess = tests();
                            add__blur(input[0].parentElement, mess);
                        }
                    }
                    else if (index == 1) {
                        function tests() {
                            return input[1].value.length >= 5 ? undefined : `Nhập số và nhập tối thiểu 5 ký tự`;
                        }
                        if (tests() == null) {
                        }
                        else {
                            var mess = tests();
                            add__blur(input[1].parentElement, mess);
                        }
                    }
                }
                blurs.oninput = function () {
                    if (index == 0) {
                        remove_oninput(input[0].parentElement);
                        isFormValidCard = true;
                    }
                    if (index == 1) {
                        remove_oninput(input[1].parentElement);
                        isFormValidCard = true;
                    }
                }
            })
            const card = document.querySelector('.auth-form__submit-suport');
            card.onclick = function () {
                for (var i = 0; i < input.length; i++) {
                    if (i == 0) {
                        function tests() {
                            return input[0].value.length >= 5 ? undefined : `Nhập số và nhập tối thiểu 5 ký tự`;
                        }
                        if (tests() == null) {
                        }
                        else {
                            var mess = tests();
                            add__blur(input[0].parentElement, mess);
                            isFormValidCard = false;
                        }
                    }
                    else if (i == 1) {
                        function tests() {
                            return input[1].value.length >= 5 ? undefined : `Nhập số và nhập tối thiểu 5 ký tự`;
                        }
                        if (tests() == null) {
                        }
                        else {
                            var mess = tests();
                            add__blur(input[1].parentElement, mess);
                            isFormValidCard = false;
                        }
                    }
                }
                if (isFormValidCard == true) {
                    AjaxRequest()
                }
            }
            var isRunning = false;
            function AjaxRequest() {
                if (!isRunning) {
                    isRunning = true;
                    active__Loading(true);
                    var form = new FormData();
                    form.append("title", input[0].value)
                    form.append("content", input[1].value)
                    var xhr = new XMLHttpRequest();
                    if (document.getElementById("image").offsetHeight != 0) {
                        form.append("img", $("#image").attr("src").split(",")[1])
                    }
                    else {
                        form.append("img", "NotValue")
                    }
                    xhr.open("POST", '/User/PostRequestSupport', true);
                    xhr.onreadystatechange = function () {
                        if (xhr.readyState == 4 && xhr.status == 200) {
                            active__Loading(false);
                            var r = xhr.responseText;
                            var j = JSON.parse(r);
                            if (j.Data.status == "OK") {
                                active__messageNotification('Đã tiếp nhận phản hồi', true);
                                input[0].value = "";
                                input[1].value = "";
                                document.getElementById("image").src = "";
                            }
                            isRunning = false;
                        }
                    }
                    xhr.send(form);
                }
            }
        })();
    }, false)
</script>
